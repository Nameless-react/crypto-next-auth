{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "incremental": true,
        "esModuleInterop": true,
        "module": "esnext",
        // Add the rule below
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "paths": {
        "@/*": [
            "./src/*"
        ]
    },
    "include": [
        "./src/app/*",
        "**/*.ts", 
        "**/*.tsx",
        ".next/types/**/*.ts",
        "index.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}